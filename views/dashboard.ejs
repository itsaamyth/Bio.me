    <div class="container-fluid">
      <div class="row">
        <div class="class col-md-6" style="padding: 20px">
          <div class="card" id="mobCard">
            <img
              style="height: 70px; width: 70px; display: block; margin: 0 auto"
              src="https://img.icons8.com/material/70/000000/user-male-circle--v1.png"
            />
            <% if (records != null){ %>
            <div class="card-body">
              <h5
                class="card-title"
                style="text-align: center; margin-top: -10px"
              >
              <%= records.name %>
              </h5>
              <div >
                  <% if(records.instagram != ''){ %>
                <img
                  style="margin: 0 4px"
                  src="https://img.icons8.com/ios/30/000000/instagram-new--v1.png"
                />
                <% } %>
                <% if(records.facebook != ''){ %>
                <img
                  style="margin: 0 4px"
                  src="https://img.icons8.com/ios/30/000000/facebook.png"
                />
                <% } %>
                <% if(records.linkedin != ''){ %>
                <img
                  style="margin: 0 4px"
                  src="https://img.icons8.com/ios/30/000000/linkedin.png"
                />
                <% } %>
                <% if(records.email != ''){ %>
                <img
                  style="margin: 0 4px"
                  src="https://img.icons8.com/external-kiranshastry-lineal-kiranshastry/35/000000/external-email-interface-kiranshastry-lineal-kiranshastry-1.png"
                />
                <% } %>
                <% if(records.twitter != ''){ %>
                    <img style="margin: 0 4px" src="https://img.icons8.com/ios/30/000000/twitter.png"/>
                  <% } %>

                  <% if(records.github != ''){ %>
                      <img style="margin: 0 4px"src="https://img.icons8.com/ios-glyphs/35/000000/github.png"/>
                    <% } %>
                    <% } %>
              </div>
              <div>
                <% if (records) { if (records.links.length > 0) { for (var i = 0;
                  i < records.links.length; i++) { %>
                <button
                  style="
                    display: block;
                    margin: 0 auto;
                    width: 100%;
                    border-radius: 40px;
                    margin-top: 10px;
                    margin-bottom: 10px;
                  "
                  type="button"
                  class="btn btn-dark"
                ><%= records.links[i].linkTitle %>
                </button>
                <% }}} %>
              </div>
            </div>
          </div>
        </div>
        <div
          class="class col-md-6" id="dashlink"
        >
          <div class="nav">
            <h5 class="active">Links</h5>
            <h5 class="nav">Themes</h5>
            <h5 class="nav">Settings</h5>
          </div>
          <!-- <hr id="hr"> -->
          <div class="profile" style="padding: 20px">
            <h3 style="margin-bottom: 30px">
              @<% if(loginUser != ''){ %><%= loginUser %><% }%>'s links
            </h3>
            <button
              style="width: 70%; font-size: 20px"
              data-toggle="modal"
              data-target="#addLinkBox"
              type="button"
              class="btn btn-primary"
            >
              + Add Link
            </button>
            <div class="links" style="margin-top: 30px">
              <% if (records) { if (records.links.length > 0) { for (var i = 0;
              i < records.links.length; i++) {%>
              <button type="button" id="addLink" class="btn btn-light">
                <h4><%= records.links[i].linkTitle %></h4>
                <p style="font-size: 16px; font-weight: normal">
                  <%= records.links[i].link %>
                </p>
              </button>
              <% }}} %>
            </div>
            <div class="social">
              <h4
                style="
                  margin-bottom: 30px;
                  margin-top: 20px;
                  margin-bottom: 20px;
                "
              >
                Socials
              </h4>
              <div >
                <% if (records != null){ %>
                <% if(records.instagram != ''){ %>
                <button class="btn btn-light" style="border-radius: 50%;height: 45px;width: 45px;">                
                  <img style="margin-left: -5px;margin-top: -1px;" src="https://img.icons8.com/ios/30/000000/instagram-new--v1.png"/>
                </button>
                <% }%>

                <% if(records.facebook != ''){ %>
                <button class="btn btn-light" style="border-radius: 50%;height: 45px;width: 45px;">                
                  <img style="margin-left: -6px;margin-top: -1px;" src="https://img.icons8.com/ios/30/000000/facebook.png"/>
                </button>
                <% } %>

                <% if(records.linkedin != ''){ %>
                <button class="btn btn-light" style="border-radius: 50%;height: 45px;width: 45px;">                
                  <img style="margin-left: -5px;margin-top: -1px;" src="https://img.icons8.com/ios/30/000000/linkedin.png"/>
                </button>
                <% } %>

                <% if(records.email != ''){ %>
                <button class="btn btn-light" style="border-radius: 50%;height: 45px;width: 45px;">                
                  <img style="margin-left: -8px;margin-top: -2px;" src="https://img.icons8.com/external-kiranshastry-lineal-kiranshastry/35/000000/external-email-interface-kiranshastry-lineal-kiranshastry-1.png"/>
                </button>
                <% } %>

                <% if(records.twitter != ''){ %>
                  <button class="btn btn-light" style="border-radius: 50%;height: 45px;width: 45px;">                
                    <img style="margin-left: -5px;margin-top: -2px;" src="https://img.icons8.com/ios/30/000000/twitter.png"/>
                  </button>
                  <% } %>

                  <% if(records.github != ''){ %>
                    <button class="btn btn-light" style="border-radius: 50%;height: 45px;width: 45px;">                
                      <img style="margin-left: -8px;margin-top: -2px;" src="https://img.icons8.com/ios-glyphs/35/000000/github.png"/>
                    </button>
                    <% } %>
                    <% }%>

                <button class="btn btn-light" data-toggle="modal" data-target="#addSocial" type="button"
                class="btn btn-primary" style="border-radius: 50%;height: 45px;width: 45px;">                
                  <img style="margin-left: -3px;margin-top: -5px;" src="https://img.icons8.com/android/24/000000/plus.png"/>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="addLinkBox"
      tabindex="-1"
      role="dialog"
      aria-labelledby="addLink"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header" style="border-bottom: none">
            <h5 class="modal-title" id="exampleModalLongTitle">Add Link</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form method="POST" action="/addLink">
            <div class="modal-body">
              <div
                class="form-group"
                style="margin-top: 20px; margin-bottom: 20px"
              >
                <input
                  type="text"
                  name="linkTitle"
                  class="form-control"
                  style="background-color: rgba(13, 12, 34, 0.05)"
                  placeholder="Link Title" required
                />
              </div>
              <div
                class="form-group"
                style="margin-top: 20px; margin-bottom: 20px"
              >
                <input
                  type="text"
                  name="link"
                  class="form-control"
                  style="background-color: rgba(13, 12, 34, 0.05)"
                  id="exampleInputPassword1"
                  placeholder="Link" required
                />
              </div>
            </div>
            <div class="modal-footer" style="border-top: none">
              <button style="width: 100%" type="submit" class="btn btn-primary">
                Save changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

